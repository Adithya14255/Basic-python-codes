a=input("enter password:")
b=["$","#","@"]
for i in a:
    if i.isupper():
        print("checked for uppercase")
        break
    else:
        print("uppercase missing")
        break
for i in a:
    if i.islower():
        print("checked for lowercase")
        break
    else:
        print("lowercase missing")
        break
for i in a:
    if i.isnumeric():
        print("checked for number")
        break
    else:
        print("number missing")
        break
for i in a:
    if i in b:
        print("checked for special character")
        break
    else:
        print("special character missing")
        break
if len(a)<6:
    print("password is too small")
elif len(a)>16:
    print("password is too large")
else:
    print("password length checked")


